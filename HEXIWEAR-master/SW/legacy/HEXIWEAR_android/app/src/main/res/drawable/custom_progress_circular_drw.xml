<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="2.33"
            android:shape="ring"
            android:useLevel="true"
            android:thicknessRatio="15.0">

            <gradient
                android:startColor="@color/color_gray"
                android:endColor="@color/color_gray"
                android:centerColor="@color/color_gray"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270" >
            <shape
                android:innerRadiusRatio="2.33"
                android:shape="ring"
                android:useLevel="true"
                android:thicknessRatio="15.0">
                <rotate
                    android:fromDegrees="0"
                    android:toDegrees="360"/>
                <gradient
                    android:startColor="@color/color_white"
                    android:endColor="@color/color_white"
                    android:centerColor="@color/color_white"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>